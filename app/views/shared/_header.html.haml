%header.p-3.bg-dark.text-white
  .container
    %nav.d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
      %ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
        %li
          = link_to t('static_pages.options.home'), root_path, class: "nav-link px-2 text-white btn btn-dark"
        %li
          = link_to t('static_pages.options.help'), help_path, class: "nav-link px-2 text-white btn btn-dark"
        %li
          = link_to t('static_pages.options.cars_list'), cars_path, class: "nav-link px-2 text-white btn btn-dark"
        %li
          = link_to t('static_pages.options.search'), new_search_path, class: "nav-link px-2 text-white btn btn-dark"
        %li
          = link_to t('static_pages.options.login'), new_user_session_path, class: "nav-link px-2 text-white btn btn-dark" if current_user.nil?
        %li
          = link_to t('static_pages.options.sign_up'), new_user_registration_path, class: "nav-link px-2 text-white btn btn-dark" if current_user.nil?
        %li
          = link_to t('static_pages.options.my_searches'), searches_path, class: "nav-link px-2 text-white btn btn-dark" if current_user
        %li
          = button_to t('static_pages.options.logout', user: current_user.email), destroy_user_session_path, method: :delete, class: "nav-link px-2 text-secondary btn btn-dark" if current_user
        
