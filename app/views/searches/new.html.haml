    .label.mb-2= f.label :year_from
    = f.text_field :year_from, placeholder: t('searches.new.placeholders.year_from')
  .form-group.m-4
    .label.mb-2= f.label :year_to
    = f.text_field :year_to, placeholder: t('searches.new.placeholders.year_to')
